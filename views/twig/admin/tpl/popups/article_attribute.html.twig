{% include "popups/headitem.html.twig" with {title: "GENERAL_ADMIN_TITLE"|translate} %}

<script type="text/javascript">
    initAoc = function()
    {

        YAHOO.oxid.container1 = new YAHOO.oxid.aoc( 'container1',
                                                    [ {% for iKey, aItem in oxajax.container1 %}
                                                       {{ sSep }}{% apply spaceless %}{ key:'_{{ iKey }}', ident: {% if aItem.4 %}true{% else %}false{% endif %}
                                                       {% if not aItem.4 %},
                                                       label: '{{ translate({ ident: "GENERAL_AJAX_SORT_"|cat(aItem.0)|upper }) }}',
                                                       visible: {% if aItem.2 %}true{% else %}false{% endif %}
                                                       {% endif %}}
                                                      {% endapply %}
                                                      {% set sSep = "," %}
                                                      {% endfor %} ],
                                                    '{{ oViewConf.getAjaxLink()|raw }}cmpid=container1&container=article_attribute&synchoxid={{ oxid }}'
                                                    );

        {% set sSep = "" %}

        YAHOO.oxid.container2 = new YAHOO.oxid.aoc( 'container2',
                                                    [ {% for iKey, aItem in oxajax.container2 %}
                                                       {{ sSep }}{% apply spaceless %}{ key:'_{{ iKey }}', ident: {% if aItem.4 %}true{% else %}false{% endif %}
                                                       {% if not aItem.4 %},
                                                       label: '{{ translate({ ident: "GENERAL_AJAX_SORT_"|cat(aItem.0)|upper }) }}',
                                                       visible: {% if aItem.2 %}true{% else %}false{% endif %}
                                                       {% if iKey != 2 %},
                                                       formatter: YAHOO.oxid.aoc.custFormatter
                                                       {% endif %}
                                                       {% endif %}}
                                                      {% endapply %}
                                                      {% set sSep = "," %}
                                                      {% endfor %} ],
                                                    '{{ oViewConf.getAjaxLink()|raw }}cmpid=container2&container=article_attribute&oxid={{ oxid }}'
                                                    )
        YAHOO.oxid.container1.getDropAction = function()
        {
            return 'fnc=addattr';
        }

        YAHOO.oxid.container2.getDropAction = function()
        {
            return 'fnc=removeattr';
        }
        YAHOO.oxid.container2.subscribe( "rowClickEvent", function( oParam )
        {
            var aSelRows= YAHOO.oxid.container2.getSelectedRows();
            if ( aSelRows.length ) {
                oParam = YAHOO.oxid.container2.getRecord(aSelRows[0]);
                $('_attrname').innerHTML = oParam._oData._0;
                
                var sValue = oParam._oData._2; // oxvalue
                var sAttrId = oParam._oData._3; // oxattrid
                var sType = oParam._oData._4; // oxtype (Added column)
                var sValueIds = oParam._oData._5; // oxattrvalueid (Added column)

                $('attr_value').value    = sValue;
                $('attr_oxid').value     = sAttrId;
                $('attr_value_id').value = sValueIds || '';
                
                // Hide all inputs first
                $('attr_value').style.display = 'none';
                $('attr_value_select').style.display = 'none';
                $('attr_value_bool').style.display = 'none';
                $('attr_value_date').style.display = 'none';

                if (sType == 'SELECT' || sType == 'MULTISELECT' || sType == 'COLOR') {
                    var oSelect = $('attr_value_select');
                    oSelect.style.display = '';
                    
                    if (sType == 'MULTISELECT') {
                        oSelect.multiple = true;
                        oSelect.style.height = '100px';
                    } else {
                        oSelect.multiple = false;
                        oSelect.style.height = ''; 
                    }

                    // Fetch options
                    var callback = {
                        success: function(oResponse) {
                            var aOptions = JSON.parse(oResponse.responseText);
                            var oSelect = $('attr_value_select');
                            oSelect.options.length = 0; // Clear
                            
                            if (sType !== 'MULTISELECT') {
                                oSelect.options[0] = new Option('Select...', '');
                            }
                            
                            // Clear ID initially
                            $('attr_value_id').value = '';
                            
                            // Store comma values for fallback
                            var aCurrentValues = [];
                            if (sType === 'MULTISELECT' && sValue) {
                                // Robust split by comma, then trim
                                var aRaw = sValue.split(',');
                                for(var m=0; m<aRaw.length; m++) {
                                    aCurrentValues.push(aRaw[m].trim());
                                }
                            }

                            // Prepare ID list
                            var aCurrentIds = [];
                            if (sType === 'MULTISELECT' && sValueIds) {
                                var aRawIds = sValueIds.split(',');
                                for(var n=0; n<aRawIds.length; n++) {
                                    aCurrentIds.push(aRawIds[n].trim());
                                }
                            }

                            var aSelectedIds = [];

                            for(var i=0; i<aOptions.length; i++) {
                                var opt = new Option(aOptions[i].value, aOptions[i].value);
                                opt.setAttribute('data-id', aOptions[i].id);
                                
                                if (sType === 'MULTISELECT') {
                                    // logic to select options
                                    var bSelected = false;

                                    // Try matching by ID first (more robust)
                                    if (aCurrentIds.length > 0) {
                                        for (var k=0; k<aCurrentIds.length; k++) {
                                            if (aCurrentIds[k] == aOptions[i].id) {
                                                bSelected = true;
                                                break;
                                            }
                                        }
                                    } 
                                    // Fallback to Value matching if no IDs found (legacy or first save)
                                    else if (aCurrentValues.length > 0) {
                                         for (var k=0; k<aCurrentValues.length; k++) {
                                            if (aCurrentValues[k] == aOptions[i].value) {
                                                bSelected = true; 
                                                break;
                                            }
                                        }
                                    }

                                    if (bSelected) {
                                        opt.selected = true;
                                        aSelectedIds.push(aOptions[i].id);
                                    }
                                } else {
                                    if(aOptions[i].value == sValue) {
                                        opt.selected = true;
                                        $('attr_value_id').value = aOptions[i].id; 
                                    }
                                }
                                oSelect.options[oSelect.options.length] = opt;
                            }
                            
                            if (sType === 'MULTISELECT') {
                                $('attr_value_id').value = aSelectedIds.join(',');
                            }

                            // Update hidden input on change
                            oSelect.onchange = function() { 
                                if (this.multiple) {
                                    var aVals = [];
                                    var aIds = [];
                                    for (var j=0; j<this.options.length; j++) {
                                        if (this.options[j].selected) {
                                            aVals.push(this.options[j].value);
                                            aIds.push(this.options[j].getAttribute('data-id'));
                                        }
                                    }
                                    $('attr_value').value = aVals.join(', ');
                                    $('attr_value_id').value = aIds.join(',');
                                } else {
                                    $('attr_value').value = this.value;
                                    var selectedAction = this.options[this.selectedIndex];
                                    if (selectedAction) {
                                        $('attr_value_id').value = selectedAction.getAttribute('data-id');
                                    } else {
                                        $('attr_value_id').value = '';
                                    }
                                }
                            };
                        },
                        failure: function() { }
                    };
                    // Use a custom method on ArticleAttributeAjax to get values
                     YAHOO.util.Connect.asyncRequest( 'GET', '{{ oViewConf.getAjaxLink()|raw }}&cmpid=container2&container=article_attribute&fnc=getAttributeValuesLegacy&attr_oxid=' + sAttrId, callback );

                } else if (sType == 'BOOL') {
                    $('attr_value_bool').style.display = '';
                    $('attr_value_bool').checked = (sValue == '1' || sValue == 'true');
                    $('attr_value_bool').onclick = function() { $('attr_value').value = this.checked ? '1' : '0'; };
                } else if (sType == 'DATE') {
                    $('attr_value_date').style.display = '';
                    $('attr_value_date').value = sValue;
                    $('attr_value_date').onchange = function() { $('attr_value').value = this.value; };
                } else {
                    // Default TEXT
                    $('attr_value').style.display = '';
                }

                $D.setStyle( $('arrt_conf'), 'visibility', '' );
            } else {
                $D.setStyle( $('arrt_conf'), 'visibility', 'hidden' );
            }
        })
        YAHOO.oxid.container2.subscribe( "dataReturnEvent", function()
        {
            $D.setStyle( $('arrt_conf'), 'visibility', 'hidden' );
        })
        YAHOO.oxid.container2.onSave = function()
        {
            YAHOO.oxid.container1.getDataSource().flushCache();
            YAHOO.oxid.container1.getPage( 0 );
            YAHOO.oxid.container2.getDataSource().flushCache();
            YAHOO.oxid.container2.getPage( 0 );
        }
        YAHOO.oxid.container2.onFailure = function() { /* currently does nothing */ }
        YAHOO.oxid.container2.saveAttribute = function()
        {
            var callback = {
                success: YAHOO.oxid.container2.onSave,
                failure: YAHOO.oxid.container2.onFailure,
                scope:   YAHOO.oxid.container2
            };
            
            var sValId = $('attr_value_id').value;
            
            YAHOO.util.Connect.asyncRequest( 'GET', '{{ oViewConf.getAjaxLink()|raw }}&cmpid=container2&container=article_attribute&fnc=saveAttributeValue&oxid={{ oxid }}&attr_value=' + encodeURIComponent( $('attr_value').value ) + '&attr_oxid=' + encodeURIComponent( $('attr_oxid').value ) + '&attr_value_id=' + encodeURIComponent(sValId), callback );

        }
        // subscribint event listeners on buttons
        $E.addListener( $('saveBtn'), "click", YAHOO.oxid.container2.saveAttribute, $('saveBtn') );
    }
    $E.onDOMReady( initAoc );
</script>

    <table width="100%">
        <colgroup>
            <col span="2" width="40%" />
            <col width="20%" />
        </colgroup>
        <tr class="edittext">
            <td colspan="3">{{ translate({ ident: "GENERAL_AJAX_DESCRIPTION" }) }}<br>{{ translate({ ident: "GENERAL_FILTERING" }) }}<br /><br /></td>
        </tr>
        <tr class="edittext">
            <td align="center" valign="top"><b>{{ translate({ ident: "ARTICLE_ATTRIBUTE_NOATTRIBUTE" }) }}</b></td>
            <td align="center" valign="top"><b>{{ translate({ ident: "ARTICLE_ATTRIBUTE_ITEMSATTRIBUTE" }) }}</b></td>
            <td align="center" valign="top">{{ translate({ ident: "ARTICLE_ATTRIBUTE_SELECTONEATTR" }) }}:</td>
        </tr>
        <tr>
            <td valign="top" id="container1"></td>
            <td valign="top" id="container2"></td>
            <td valign="top" align="center" class="edittext" id="arrt_conf" style="visibility:hidden">
              <br><br>
              <b id="_attrname">{{ attr_name }}</b>:<br><br>
              <input id="attr_oxid" type="hidden">
              <input id="attr_value_id" type="hidden">
              
              <!-- Standard Text Input -->
              <input id="attr_value" class="editinput" type="text" style="display:none">
              
              <!-- Select Input -->
              <select id="attr_value_select" class="editinput" style="display:none"></select>
              
              <!-- Boolean Input -->
              <input id="attr_value_bool" type="checkbox" style="display:none">
              
              <!-- Date Input -->
              <input id="attr_value_date" type="date" class="editinput" style="display:none">
              
              <br><br>
              <input id="saveBtn" type="button" class="edittext" value="{{ translate({ ident: "ARTICLE_ATTRIBUTE_SAVE" }) }}">
            </td>
        </tr>
        <tr>
            <td class="oxid-aoc-actions"><input type="button" value="{{ translate({ ident: "GENERAL_AJAX_ASSIGNALL" }) }}" id="container1_btn"></td>
            <td class="oxid-aoc-actions"><input type="button" value="{{ translate({ ident: "GENERAL_AJAX_UNASSIGNALL" }) }}" id="container2_btn"></td>
            <td></td>
        </tr>
    </table>

</body>
</html>
